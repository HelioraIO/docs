{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Heliora Docs",
  "colors": {
    "primary": "#65f459",
    "light": "#65f459",
    "dark": "#15803D"
  },
  "favicon": "/favicon.png",
  "homepage": "introduction/home",
  "redirects": [
    {
      "source": "/",
      "destination": "/introduction/home"
    }
  ],
  "navigation": {
    "groups": [
      {
        "group": "Introduction",
        "pages": ["introduction/home"]
      },
      {
        "group": "Heliora Overview",
        "pages": ["heliora-overview/what-is-heliora", "heliora-overview/how-does-heliora-work", "heliora-overview/is-heliora-safe"]
      },
      {
        "group": "Liquidity Products",
        "pages": ["liquidity-products/boosted-deals", "liquidity-products/heliora-vaults", "liquidity-products/heliora-campaigns", "liquidity-products/earn-widget"]
      },
      {
        "group": "Partner Products",
        "pages": ["partner-products/client-portal", "partner-products/deals-dashboard", "partner-products/distribution-dashboard", "partner-products/heliora-earn"]
      },
      {
        "group": "Resources",
        "pages": ["resources/support", "resources/brand-kit"]
      },
      {
        "group": "Legal",
        "pages": ["legal/privacy-statement", "legal/terms"]
      }
    ]
  },
  "logo": "/logo/dark.svg",
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "contextual": {
    "options": []
  },
  "appearance": {
    "strict": true,
    "default": "dark"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/heliora_io",
      "github": "https://github.com/helioraIO"
    }
  }
}
